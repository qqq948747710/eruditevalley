<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    tools:context=".View.RegisterActivity">

        <include layout="@layout/main_navbar" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:src="@drawable/default_icon"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20pt"
            android:orientation="vertical">
            <EditText
                android:id="@+id/reg_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入昵称"
                android:drawableLeft="@drawable/user_name_icon"
                android:drawablePadding="10dp"
                android:paddingLeft="8dp"
                android:textColor="#000000"
                android:textColorHint="#a3a3a3"
                android:textSize="20sp"
                android:inputType="text"
                android:lines="1"
                android:background="@drawable/login_user_name_bg"/>
            <EditText
                android:id="@+id/reg_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入用户名"
                android:drawableLeft="@drawable/user_name_icon"
                android:drawablePadding="10dp"
                android:paddingLeft="8dp"
                android:textColor="#000000"
                android:textColorHint="#a3a3a3"
                android:textSize="20sp"
                android:inputType="text"
                android:lines="1"
                android:background="@drawable/login_user_name_bg"/>
            <EditText
                android:id="@+id/reg_pwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入密码"
                android:drawableLeft="@drawable/psw_icon"
                android:drawablePadding="10dp"
                android:paddingLeft="8dp"
                android:textColor="#000000"
                android:textColorHint="#a3a3a3"
                android:textSize="20sp"
                android:lines="1"
                android:inputType="textPassword"
                android:background="@drawable/login_user_name_bg" />
            <EditText
                android:id="@+id/reg_repwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请再次输入密码"
                android:drawableLeft="@drawable/psw_icon"
                android:drawablePadding="10dp"
                android:paddingLeft="8dp"
                android:textColor="#000000"
                android:textColorHint="#a3a3a3"
                android:textSize="20sp"
                android:lines="1"
                android:inputType="textPassword"
                android:background="@drawable/login_user_name_bg" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="50pt"
            android:layout_width="match_parent"
            android:gravity="center">
            <Button
                android:id="@+id/btn_reg"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="注册"
                android:textSize="20sp"
                android:textColor="#ffff"
                android:background="@drawable/logbtn_selector"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp">
        </LinearLayout>
</LinearLayout>