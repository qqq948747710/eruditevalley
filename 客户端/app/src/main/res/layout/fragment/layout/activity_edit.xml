<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.EditActivity">
    <include layout="@layout/main_navbar"/>
    <EditText
        android:id="@+id/editview_edit"
        android:layout_width="match_parent"
        android:background="@drawable/login_user_name_bg"
        android:hint="请输入你要修改的内容"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/editview_ok"
        android:layout_gravity="center"
        android:background="@drawable/logbtn_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/black"
        android:text="保存"/>
</LinearLayout>