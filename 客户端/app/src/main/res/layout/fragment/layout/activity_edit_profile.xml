<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <include layout="@layout/main_navbar"/>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        >
        <ImageView
            android:id="@+id/eduit_head_img"
            android:layout_marginTop="100dp"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:src="@drawable/default_icon"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/eduit_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:text="点击头像更换"/>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#808080"/>
        <RelativeLayout
            android:id="@+id/edit_name_item"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f5f5f5">
            <TextView
                android:id="@+id/edit_name_tv"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="#808080"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/edit_name"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@android:color/black"
                android:text="我是好人"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#808080"/>
        <RelativeLayout
            android:id="@+id/edit_sex_item"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f5f5f5">
            <TextView
                android:id="@+id/edit_sex_tv"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="#808080"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/edit_sex"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@android:color/black"
                android:text="男"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#808080"/>
        <RelativeLayout
            android:id="@+id/edit_email_item"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f5f5f5">
            <TextView
                android:id="@+id/edit_email_tv"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子邮箱"
                android:textColor="#808080"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/edit_email"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@android:color/black"
                android:text="123@qq.com"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#808080"/>
        <Button
            android:id="@+id/edit_ok"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logbtn_selector"
            android:textColor="@android:color/black"
            android:text="保存修改"
            />
    </LinearLayout>
</LinearLayout>