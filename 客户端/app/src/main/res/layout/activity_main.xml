<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <include layout="@layout/main_navbar"></include>
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_tabbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#dcdcdc">
        <LinearLayout
            android:id="@+id/main_course"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/main_course_img"
                android:src="@drawable/main_course_icon"
                android:layout_marginTop="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/main_course_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:text="课程">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_exercises"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/main_exercises_img"
                android:src="@drawable/main_exercises_icon"
                android:layout_marginTop="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/main_exercises_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:text="习题">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_my"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/main_my_img"
                android:src="@drawable/main_my_icon"
                android:layout_marginTop="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/main_my_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:text="我">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>